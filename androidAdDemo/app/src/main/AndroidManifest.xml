<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="Instantiatable">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:banner="@mipmap/ic_launcher"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BsLauncher"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="applovin.sdk.verbose_logging"
            android:value="true" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2540674760491959~9832388524" />

        <activity
            android:name=".MaxSearchActivity"
            android:exported="true"

            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".adPreLoad.MaxPreSearchActivity"
            android:exported="true"

            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".MaxSearchResultActivity"
            android:exported="true"
            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".MaxMainActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".adPreLoad.MaxAdPreDrawActivity"
            android:exported="true"

            android:theme="@style/Theme.BsLauncher" />

        <activity
            android:name=".MaxAdDrawActivity"
            android:exported="true"

            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".MaxWorkPrintActivity"
            android:exported="true"

            android:theme="@style/Theme.BsLauncher" />
        <activity
            android:name=".MaxSplashActivity"
            android:exported="true"
            android:launchMode="singleTask"

            android:theme="@style/Theme.BsLauncher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>