<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cp_rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="AdDemo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />


    <Button
            android:id="@+id/tv_ai_draw"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="80dp"
            android:text="AI绘图"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/tv_work_print"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_draw"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="网页打印"
            android:layout_height="wrap_content" />


    <Button
            android:id="@+id/tv_ai_search_pic"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_print"
            android:layout_marginTop="10dp"
            android:text="搜图"
            android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>